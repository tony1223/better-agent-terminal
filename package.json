{
  "name": "better-agent-terminal",
  "version": "1.25.1220150127",
  "description": "Windows terminal aggregator with multi-workspace support and Claude Code integration",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "compile": "vite build",
    "start": "electron .",
    "build": "vite build && electron-builder",
    "build:release": "node scripts/build-version.js",
    "postinstall": "echo 'Run electron-rebuild manually if node-pty is needed'",
    "test:console": "node tests/console-test.js",
    "test:claude-ctrl-o": "node tests/test-claude-ctrl-o.js",
    "diagnose:ctrl-o": "npx electron tests/diagnose-ctrl-o.js",
    "diagnose:ctrl-o:quick": "npx electron tests/diagnose-ctrl-o.js --quick",
    "diagnose:ctrl-o:verbose": "npx electron tests/diagnose-ctrl-o.js --verbose"
  },
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "better-sqlite3": "^12.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "@lydell/node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "org.tonyq.better-agent-terminal",
    "productName": "Better Agent Terminal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "zip",
      "signAndEditExecutable": false,
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": "universal"
      },
      "icon": "assets/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "forceCodeSigning": false,
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "assets/icon.ico",
      "assets/icon.png"
    ]
  }
}
